    <assembly fullname="mscorlib" preserve="all"/>

    <!-- Net standard types -->
    <assembly fullname="netstandard" preserve="all"/>

    <!-- SaveGameFree serialization -->
    <assembly fullname="BayatGames.SaveGameFree" preserve="all"/>

    <!-- TextMesh Pro -->
    <assembly fullname="Unity.TextMeshPro" preserve="all"/>
